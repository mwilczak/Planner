{% extends 'base.html.twig' %}

{% block body %}
    <h1>People list</h1>
    <a class="btn btn-success" href="{{ path('person_new') }}">Create a new person</a><br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Address</th>
                <th>Position</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td><a href="{{ path('person_show', { 'id': person.id }) }}">{{ person.id }}</a></td>
                <td>{{ person.name }}</td>
                <td>{{ person.surname }}</td>
                <td>{{ person.address }}</td>
                <td>{{ person.position }}</td>
                <td>{{ person.image }}</td>
                <td>

                            <a href="{{ path('person_show', { 'id': person.id }) }}">show</a>
                </td>
                <td>
                            {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('person_edit', { 'id': person.id }) }}">edit</a>
                            {% endif %}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="btn btn-default" href="/">Wroc</a>

{% endblock %}
